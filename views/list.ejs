<%- include("header") -%>
<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% itemList.forEach((item)=>{ %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" />
      <p><%=item.name%></p>
    </div>
  </form>
  <% }) %>
  <form class="item" action="/" method="post">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      autocomplete="off"
    />
    <button type="submit" name="submit" value="<%=listTitle%>">+</button>
  </form>
</div>
<%- include("footer") -%>
